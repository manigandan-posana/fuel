// App.tsx
import React, { useMemo, useState } from "react";
import type { FormEvent, ChangeEvent } from "react";
import { DataTable } from "primereact/datatable";
import { Column } from "primereact/column";
import { Button } from "primereact/button";
import { InputText } from "primereact/inputtext";
import { Dropdown } from "primereact/dropdown";
import { Calendar } from "primereact/calendar";
import { InputNumber } from "primereact/inputnumber";
import { Card } from "primereact/card";
import { TabView, TabPanel } from "primereact/tabview";
import { Tag } from "primereact/tag";
import { FileUpload } from "primereact/fileupload";
import { Toast } from "primereact/toast";
import "primereact/resources/themes/lara-light-blue/theme.css";
import "primereact/resources/primereact.min.css";
import "primeicons/primeicons.css";

type ProjectId = "Project A" | "Project B";

type FuelType = "Petrol" | "Diesel" | "Electric";
type FuelTab = "Petrol" | "Diesel";

type VehicleType =
  | "Own Vehicle"
  | "Rent – Monthly"
  | "Rent – Daily"
  | "Rent – Hourly";

interface Vehicle {
  id: string;
  projectId: ProjectId;
  vehicleName: string;
  vehicleNumber: string;
  vehicleType: VehicleType;
  fuelType: FuelType;
}

interface FuelEntry {
  id: string;
  date: string; // YYYY-MM-DD
  projectId: ProjectId;
  vehicleId: string;
  vehicleName: string;
  fuelType: FuelType;
  litres: number;
  openingKm: number;
  closingKm: number;
  distance: number;
  mileage: number;
  openingKmPhotoName?: string;
  closingKmPhotoName?: string;
}

interface VehicleFormState {
  vehicleName: string;
  vehicleNumber: string;
  vehicleType: VehicleType;
  fuelType: FuelType;
}

interface FuelFormState {
  date: string;
  vehicleId: string;
  litres: string;
  openingKm: string;
  closingKm: string;
  openingKmPhotoName: string;
  closingKmPhotoName: string;
}

const PROJECTS: ProjectId[] = ["Project A", "Project B"];

const INITIAL_VEHICLES: Vehicle[] = [
  {
    id: "veh-1",
    projectId: "Project A",
    vehicleName: "Tipper Lorry",
    vehicleNumber: "TN 01 AB 1234",
    vehicleType: "Own Vehicle",
    fuelType: "Diesel",
  },
  {
    id: "veh-2",
    projectId: "Project A",
    vehicleName: "Site Car",
    vehicleNumber: "TN 02 CD 5678",
    vehicleType: "Rent – Daily",
    fuelType: "Petrol",
  },
  {
    id: "veh-3",
    projectId: "Project B",
    vehicleName: "Pickup Van",
    vehicleNumber: "TN 03 EF 9012",
    vehicleType: "Rent – Monthly",
    fuelType: "Diesel",
  },
];

function getTodayStr(): string {
  const d = new Date();
  const year = d.getFullYear();
  const month = String(d.getMonth() + 1).padStart(2, "0");
  const day = String(d.getDate()).padStart(2, "0");
  return `${year}-${month}-${day}`;
}

const App: React.FC = () => {
  const todayStr = getTodayStr();

  const [selectedProject, setSelectedProject] = useState<ProjectId>("Project A");
  const [vehicles, setVehicles] = useState<Vehicle[]>(INITIAL_VEHICLES);
  const [fuelEntries, setFuelEntries] = useState<FuelEntry[]>([]);
  const [activeFuelTab, setActiveFuelTab] = useState<FuelTab>("Petrol");
  const [selectedVehicleFilterId, setSelectedVehicleFilterId] =
    useState<string>("all");
  const [vehicleForm, setVehicleForm] = useState<VehicleFormState>({
    vehicleName: "",
    vehicleNumber: "",
    vehicleType: "Own Vehicle",
    fuelType: "Petrol",
  });
  const [fuelForm, setFuelForm] = useState<FuelFormState>(() => ({
    date: todayStr,
    vehicleId: "",
    litres: "",
    openingKm: "",
    closingKm: "",
    openingKmPhotoName: "",
    closingKmPhotoName: "",
  }));
  const [fuelError, setFuelError] = useState<string | null>(null);

  const projectVehicles = useMemo(
    () => vehicles.filter((v) => v.projectId === selectedProject),
    [vehicles, selectedProject]
  );

  const vehiclesForActiveFuel = useMemo(
    () => projectVehicles.filter((v) => v.fuelType === activeFuelTab),
    [projectVehicles, activeFuelTab]
  );

  const selectedVehicleForEntry = useMemo(
    () =>
      vehiclesForActiveFuel.find((v) => v.id === fuelForm.vehicleId) || null,
    [vehiclesForActiveFuel, fuelForm.vehicleId]
  );

  const filteredFuelEntries = useMemo(
    () =>
      fuelEntries.filter((entry) => {
        if (entry.projectId !== selectedProject) return false;
        if (entry.fuelType !== activeFuelTab) return false;
        if (
          selectedVehicleFilterId !== "all" &&
          entry.vehicleId !== selectedVehicleFilterId
        ) {
          return false;
        }
        return true;
      }),
    [fuelEntries, selectedProject, activeFuelTab, selectedVehicleFilterId]
  );

  const cumulativeKm = useMemo(
    () =>
      filteredFuelEntries.reduce((sum, entry) => {
        return sum + entry.distance;
      }, 0),
    [filteredFuelEntries]
  );

  const todayEntries = useMemo(
    () =>
      fuelEntries.filter(
        (entry) => entry.date === todayStr && entry.projectId === selectedProject
      ),
    [fuelEntries, todayStr, selectedProject]
  );

  const handleProjectChange = (e: ChangeEvent<HTMLSelectElement>) => {
    const project = e.target.value as ProjectId;
    setSelectedProject(project);
    setSelectedVehicleFilterId("all");
    setFuelForm((prev) => ({ ...prev, vehicleId: "" }));
  };

  const handleAddVehicle = (e: FormEvent<HTMLFormElement>) => {
    e.preventDefault();

    const name = vehicleForm.vehicleName.trim();
    const number = vehicleForm.vehicleNumber.trim();

    if (!name || !number) {
      return;
    }

    const newVehicle: Vehicle = {
      id: `veh-${Date.now()}-${Math.random().toString(36).slice(2, 6)}`,
      projectId: selectedProject,
      vehicleName: name,
      vehicleNumber: number,
      vehicleType: vehicleForm.vehicleType,
      fuelType: vehicleForm.fuelType,
    };

    setVehicles((prev) => [...prev, newVehicle]);
    setVehicleForm((prev) => ({
      ...prev,
      vehicleName: "",
      vehicleNumber: "",
    }));
  };

  const handleFuelFileChange = (
    field: "openingKmPhotoName" | "closingKmPhotoName",
    e: ChangeEvent<HTMLInputElement>
  ) => {
    const file = e.target.files?.[0];
    if (field === "openingKmPhotoName") {
      setFuelForm((prev) => ({
        ...prev,
        openingKmPhotoName: file ? file.name : "",
      }));
    } else {
      setFuelForm((prev) => ({
        ...prev,
        closingKmPhotoName: file ? file.name : "",
      }));
    }
  };

  const handleAddFuelEntry = (e: FormEvent<HTMLFormElement>) => {
    e.preventDefault();
    setFuelError(null);

    const vehicle = vehiclesForActiveFuel.find(
      (v) => v.id === fuelForm.vehicleId
    );
    if (!vehicle) {
      setFuelError("Please select a vehicle.");
      return;
    }

    const litres = Number(fuelForm.litres);
    const openingKm = Number(fuelForm.openingKm);
    const closingKm = Number(fuelForm.closingKm);

    if (!Number.isFinite(litres) || litres <= 0) {
      setFuelError("Litres must be greater than 0.");
      return;
    }

    if (!Number.isFinite(openingKm) || !Number.isFinite(closingKm)) {
      setFuelError("Opening and closing km must be valid numbers.");
      return;
    }

    if (closingKm < openingKm) {
      setFuelError("Closing km should be greater than or equal to opening km.");
      return;
    }

    const distance = closingKm - openingKm;
    const mileage = distance / litres;

    const newEntry: FuelEntry = {
      id: `fuel-${Date.now()}-${Math.random().toString(36).slice(2, 6)}`,
      date: fuelForm.date,
      projectId: selectedProject,
      vehicleId: vehicle.id,
      vehicleName: vehicle.vehicleName,
      fuelType: vehicle.fuelType,
      litres,
      openingKm,
      closingKm,
      distance,
      mileage,
      openingKmPhotoName: fuelForm.openingKmPhotoName || undefined,
      closingKmPhotoName: fuelForm.closingKmPhotoName || undefined,
    };

    setFuelEntries((prev) => [newEntry, ...prev]);

    setFuelForm((prev) => ({
      ...prev,
      litres: "",
      openingKm: "",
      closingKm: "",
      openingKmPhotoName: "",
      closingKmPhotoName: "",
    }));
  };

  return (
    <div className="min-h-screen bg-slate-100 text-slate-900">
      <div className="mx-auto max-w-6xl px-3 py-5 md:px-6 md:py-8 space-y-5 md:space-y-6">
        {/* Header / Project Selector */}
        <header className="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 className="text-xl md:text-2xl font-semibold text-slate-900 tracking-tight">
              Vehicle &amp; Fuel Management
            </h1>
            <p className="mt-1 text-xs md:text-sm text-slate-500">
              Quick demo for managing vehicles and daily fuel entries with
              mileage and cumulative distance.
            </p>
          </div>
          <div className="flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 shadow-sm">
            <span className="text-xs font-medium text-slate-500">
              Project:
            </span>
            <select
              value={selectedProject}
              onChange={handleProjectChange}
              className="rounded-lg border border-slate-200 bg-slate-50 px-2 py-1 text-xs md:text-sm focus:outline-none focus:ring-2 focus:ring-slate-400"
            >
              {PROJECTS.map((p) => (
                <option key={p} value={p}>
                  {p}
                </option>
              ))}
            </select>
          </div>
        </header>

        {/* Main two-column layout */}
        <section className="grid gap-4 md:grid-cols-2">
          {/* Vehicle Management */}
          <div className="rounded-2xl border border-slate-200 bg-white p-4 md:p-5 shadow-sm">
            <div className="flex items-center justify-between gap-2">
              <div>
                <h2 className="text-sm md:text-base font-semibold text-slate-900">
                  Vehicle Management
                </h2>
                <p className="mt-1 text-[11px] md:text-xs text-slate-500">
                  Add vehicles for <span className="font-medium">{selectedProject}</span>.
                </p>
              </div>
              <span className="rounded-full bg-slate-100 px-3 py-1 text-[11px] font-medium text-slate-600">
                {projectVehicles.length} vehicle
                {projectVehicles.length === 1 ? "" : "s"}
              </span>
            </div>

            {/* Add vehicle form */}
            <form
              onSubmit={handleAddVehicle}
              className="mt-3 space-y-3 border-t border-slate-100 pt-3"
            >
              <div className="grid grid-cols-1 gap-3 sm:grid-cols-2">
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Vehicle Name
                  </label>
                  <input
                    type="text"
                    value={vehicleForm.vehicleName}
                    onChange={(e) =>
                      setVehicleForm((prev) => ({
                        ...prev,
                        vehicleName: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 text-xs focus:border-slate-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-slate-200"
                    placeholder="eg. Tipper Lorry"
                  />
                </div>
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Vehicle Number
                  </label>
                  <input
                    type="text"
                    value={vehicleForm.vehicleNumber}
                    onChange={(e) =>
                      setVehicleForm((prev) => ({
                        ...prev,
                        vehicleNumber: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 text-xs focus:border-slate-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-slate-200"
                    placeholder="eg. TN 01 AB 1234"
                  />
                </div>
              </div>

              <div className="grid grid-cols-1 gap-3 sm:grid-cols-2">
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Vehicle Type
                  </label>
                  <select
                    value={vehicleForm.vehicleType}
                    onChange={(e) =>
                      setVehicleForm((prev) => ({
                        ...prev,
                        vehicleType: e.target.value as VehicleType,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 text-xs focus:border-slate-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-slate-200"
                  >
                    <option>Own Vehicle</option>
                    <option>Rent – Monthly</option>
                    <option>Rent – Daily</option>
                    <option>Rent – Hourly</option>
                  </select>
                </div>
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Fuel Type
                  </label>
                  <select
                    value={vehicleForm.fuelType}
                    onChange={(e) =>
                      setVehicleForm((prev) => ({
                        ...prev,
                        fuelType: e.target.value as FuelType,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 text-xs focus:border-slate-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-slate-200"
                  >
                    <option>Petrol</option>
                    <option>Diesel</option>
                    <option>Electric</option>
                  </select>
                </div>
              </div>

              <div className="flex justify-end">
                <button
                  type="submit"
                  className="inline-flex items-center rounded-lg bg-slate-900 px-3.5 py-1.5 text-xs font-medium text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-400"
                >
                  + Add Vehicle
                </button>
              </div>
            </form>

            {/* Vehicle list */}
            <div className="mt-4">
              {projectVehicles.length === 0 ? (
                <p className="text-[11px] text-slate-500">
                  No vehicles added for this project yet.
                </p>
              ) : (
                <>
                  {/* Desktop table */}
                  <div className="hidden md:block overflow-hidden rounded-xl border border-slate-100">
                    <table className="min-w-full text-xs">
                      <thead className="bg-slate-50">
                        <tr>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Name
                          </th>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Number
                          </th>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Type
                          </th>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Fuel
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {projectVehicles.map((v) => (
                          <tr
                            key={v.id}
                            className="border-t border-slate-100 bg-white"
                          >
                            <td className="px-3 py-1.5 text-slate-800">
                              {v.vehicleName}
                            </td>
                            <td className="px-3 py-1.5 text-slate-600">
                              {v.vehicleNumber}
                            </td>
                            <td className="px-3 py-1.5 text-slate-600">
                              {v.vehicleType}
                            </td>
                            <td className="px-3 py-1.5 text-slate-600">
                              {v.fuelType}
                            </td>
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>

                  {/* Mobile cards */}
                  <div className="space-y-2 md:hidden mt-1">
                    {projectVehicles.map((v) => (
                      <div
                        key={v.id}
                        className="rounded-xl border border-slate-100 bg-slate-50 px-3 py-2 text-[11px]"
                      >
                        <div className="flex justify-between gap-2">
                          <div className="font-medium text-slate-800">
                            {v.vehicleName}
                          </div>
                          <span className="rounded-full bg-slate-100 px-2 py-0.5 text-[10px] text-slate-600">
                            {v.fuelType}
                          </span>
                        </div>
                        <div className="mt-1 flex flex-wrap gap-x-4 gap-y-1 text-slate-600">
                          <span>#{v.vehicleNumber}</span>
                          <span>{v.vehicleType}</span>
                        </div>
                      </div>
                    ))}
                  </div>
                </>
              )}
            </div>
          </div>

          {/* Fuel Management */}
          <div className="rounded-2xl border border-slate-200 bg-white p-4 md:p-5 shadow-sm">
            <div className="flex flex-col gap-3 border-b border-slate-100 pb-3 md:flex-row md:items-center md:justify-between">
              <div>
                <h2 className="text-sm md:text-base font-semibold text-slate-900">
                  Fuel Management
                </h2>
                <p className="mt-1 text-[11px] md:text-xs text-slate-500">
                  Add fuel entries, view mileage and cumulative distance for
                  petrol &amp; diesel vehicles.
                </p>
              </div>

              {/* Fuel type tabs */}
              <div className="inline-flex rounded-full bg-slate-100 p-1 text-xs">
                {(["Petrol", "Diesel"] as FuelTab[]).map((tab) => {
                  const active = activeFuelTab === tab;
                  return (
                    <button
                      key={tab}
                      type="button"
                      onClick={() => {
                        setActiveFuelTab(tab);
                        setSelectedVehicleFilterId("all");
                        setFuelForm((prev) => ({ ...prev, vehicleId: "" }));
                      }}
                      className={
                        "relative rounded-full px-3 py-1 font-medium transition " +
                        (active
                          ? "bg-white text-slate-900 shadow-sm"
                          : "text-slate-500 hover:text-slate-800")
                      }
                    >
                      {tab}
                    </button>
                  );
                })}
              </div>
            </div>

            {/* Fuel entry form */}
            <form
              onSubmit={handleAddFuelEntry}
              className="mt-3 space-y-3 rounded-xl bg-slate-50 px-3 py-3"
            >
              <div className="grid grid-cols-1 gap-3 md:grid-cols-3">
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Date
                  </label>
                  <input
                    type="date"
                    value={fuelForm.date}
                    onChange={(e) =>
                      setFuelForm((prev) => ({ ...prev, date: e.target.value }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                  />
                </div>

                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Vehicle ({activeFuelTab})
                  </label>
                  <select
                    value={fuelForm.vehicleId}
                    onChange={(e) =>
                      setFuelForm((prev) => ({
                        ...prev,
                        vehicleId: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                  >
                    <option value="">
                      {vehiclesForActiveFuel.length === 0
                        ? "No vehicles for this fuel type"
                        : "Select vehicle"}
                    </option>
                    {vehiclesForActiveFuel.map((v) => (
                      <option key={v.id} value={v.id}>
                        {v.vehicleName} ({v.vehicleNumber})
                      </option>
                    ))}
                  </select>
                  <p className="mt-1 text-[10px] text-slate-500">
                    Fuel type:{" "}
                    <span className="font-semibold text-slate-700">
                      {selectedVehicleForEntry?.fuelType ?? "—"}
                    </span>
                  </p>
                </div>

                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Litres
                  </label>
                  <input
                    type="number"
                    min={0}
                    step="0.01"
                    value={fuelForm.litres}
                    onChange={(e) =>
                      setFuelForm((prev) => ({
                        ...prev,
                        litres: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                    placeholder="eg. 20"
                  />
                </div>
              </div>

              <div className="grid grid-cols-1 gap-3 md:grid-cols-3">
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Opening km
                  </label>
                  <input
                    type="number"
                    value={fuelForm.openingKm}
                    onChange={(e) =>
                      setFuelForm((prev) => ({
                        ...prev,
                        openingKm: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                    placeholder="eg. 12000"
                  />
                </div>
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Closing km
                  </label>
                  <input
                    type="number"
                    value={fuelForm.closingKm}
                    onChange={(e) =>
                      setFuelForm((prev) => ({
                        ...prev,
                        closingKm: e.target.value,
                      }))
                    }
                    className="w-full rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                    placeholder="eg. 12150"
                  />
                </div>
                <div className="flex items-end justify-end">
                  <button
                    type="submit"
                    disabled={vehiclesForActiveFuel.length === 0}
                    className={
                      "inline-flex w-full items-center justify-center rounded-lg px-3.5 py-1.5 text-xs font-medium shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-400 " +
                      (vehiclesForActiveFuel.length === 0
                        ? "cursor-not-allowed bg-slate-200 text-slate-500"
                        : "bg-emerald-600 text-white hover:bg-emerald-500")
                    }
                  >
                    Save Fuel Entry
                  </button>
                </div>
              </div>

              <div className="grid grid-cols-1 gap-3 md:grid-cols-2">
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Opening km Photo
                  </label>
                  <input
                    type="file"
                    accept="image/*"
                    onChange={(e) =>
                      handleFuelFileChange("openingKmPhotoName", e)
                    }
                    className="block w-full text-xs text-slate-600 file:mr-2 file:rounded-lg file:border-0 file:bg-slate-900 file:px-3 file:py-1.5 file:text-xs file:font-medium file:text-white hover:file:bg-slate-800"
                  />
                  {fuelForm.openingKmPhotoName && (
                    <p className="mt-1 truncate text-[10px] text-slate-500">
                      {fuelForm.openingKmPhotoName}
                    </p>
                  )}
                </div>
                <div>
                  <label className="mb-1 block text-[11px] font-medium text-slate-600">
                    Closing km Photo
                  </label>
                  <input
                    type="file"
                    accept="image/*"
                    onChange={(e) =>
                      handleFuelFileChange("closingKmPhotoName", e)
                    }
                    className="block w-full text-xs text-slate-600 file:mr-2 file:rounded-lg file:border-0 file:bg-slate-900 file:px-3 file:py-1.5 file:text-xs file:font-medium file:text-white hover:file:bg-slate-800"
                  />
                  {fuelForm.closingKmPhotoName && (
                    <p className="mt-1 truncate text-[10px] text-slate-500">
                      {fuelForm.closingKmPhotoName}
                    </p>
                  )}
                </div>
              </div>

              {fuelError && (
                <p className="text-[11px] font-medium text-red-600">
                  {fuelError}
                </p>
              )}
            </form>

            {/* Filter + cumulative km */}
            <div className="mt-4 space-y-2">
              <div className="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
                <p className="text-[11px] text-slate-500">
                  Showing{" "}
                  <span className="font-semibold">
                    {activeFuelTab.toLowerCase()}
                  </span>{" "}
                  entries for{" "}
                  <span className="font-semibold">{selectedProject}</span>.
                </p>
                <div className="flex items-center gap-2">
                  <span className="text-[11px] text-slate-600">
                    Filter by vehicle:
                  </span>
                  <select
                    value={selectedVehicleFilterId}
                    onChange={(e) =>
                      setSelectedVehicleFilterId(e.target.value)
                    }
                    className="rounded-lg border border-slate-200 bg-white px-2.5 py-1.5 text-xs focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200"
                  >
                    <option value="all">
                      All {activeFuelTab.toLowerCase()} vehicles
                    </option>
                    {vehiclesForActiveFuel.map((v) => (
                      <option key={v.id} value={v.id}>
                        {v.vehicleName}
                      </option>
                    ))}
                  </select>
                </div>
              </div>

              {selectedVehicleFilterId !== "all" && (
                <div className="rounded-lg bg-emerald-50 px-3 py-2 text-[11px] text-emerald-800">
                  Cumulative distance for{" "}
                  <span className="font-semibold">
                    {
                      vehiclesForActiveFuel.find(
                        (v) => v.id === selectedVehicleFilterId
                      )?.vehicleName
                    }
                  </span>
                  :{" "}
                  <span className="font-semibold">
                    {cumulativeKm.toFixed(1)} km
                  </span>
                </div>
              )}
            </div>

            {/* Fuel entries list */}
            <div className="mt-3">
              {filteredFuelEntries.length === 0 ? (
                <p className="text-[11px] text-slate-500">
                  No fuel entries yet for this selection.
                </p>
              ) : (
                <>
                  {/* Desktop table */}
                  <div className="hidden md:block overflow-hidden rounded-xl border border-slate-100">
                    <table className="min-w-full text-[11px]">
                      <thead className="bg-slate-50">
                        <tr>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Vehicle
                          </th>
                          <th className="px-3 py-2 text-left font-semibold text-slate-600">
                            Date
                          </th>
                          <th className="px-3 py-2 text-right font-semibold text-slate-600">
                            Litres
                          </th>
                          <th className="px-3 py-2 text-right font-semibold text-slate-600">
                            Opening km
                          </th>
                          <th className="px-3 py-2 text-right font-semibold text-slate-600">
                            Closing km
                          </th>
                          <th className="px-3 py-2 text-right font-semibold text-slate-600">
                            Distance
                          </th>
                          <th className="px-3 py-2 text-right font-semibold text-slate-600">
                            Mileage
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {filteredFuelEntries.map((entry) => (
                          <tr
                            key={entry.id}
                            className="border-t border-slate-100 bg-white"
                          >
                            <td className="px-3 py-1.5 text-slate-800">
                              {entry.vehicleName}
                            </td>
                            <td className="px-3 py-1.5 text-slate-600">
                              {entry.date}
                            </td>
                            <td className="px-3 py-1.5 text-right text-slate-600">
                              {entry.litres.toFixed(2)}
                            </td>
                            <td className="px-3 py-1.5 text-right text-slate-600">
                              {entry.openingKm.toFixed(1)}
                            </td>
                            <td className="px-3 py-1.5 text-right text-slate-600">
                              {entry.closingKm.toFixed(1)}
                            </td>
                            <td className="px-3 py-1.5 text-right text-slate-600">
                              {entry.distance.toFixed(1)} km
                            </td>
                            <td className="px-3 py-1.5 text-right text-slate-600">
                              {entry.mileage.toFixed(2)} km/l
                            </td>
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>

                  {/* Mobile cards */}
                  <div className="mt-1 space-y-2 md:hidden">
                    {filteredFuelEntries.map((entry) => (
                      <div
                        key={entry.id}
                        className="rounded-xl border border-slate-100 bg-slate-50 px-3 py-2 text-[11px]"
                      >
                        <div className="flex justify-between gap-2">
                          <div className="font-semibold text-slate-800">
                            {entry.vehicleName}
                          </div>
                          <span className="text-[10px] text-slate-500">
                            {entry.date}
                          </span>
                        </div>
                        <div className="mt-1 grid grid-cols-2 gap-x-4 gap-y-1 text-slate-600">
                          <span>
                            <span className="font-medium">Litres:</span>{" "}
                            {entry.litres.toFixed(2)}
                          </span>
                          <span>
                            <span className="font-medium">Distance:</span>{" "}
                            {entry.distance.toFixed(1)} km
                          </span>
                          <span>
                            <span className="font-medium">Opening:</span>{" "}
                            {entry.openingKm.toFixed(1)}
                          </span>
                          <span>
                            <span className="font-medium">Closing:</span>{" "}
                            {entry.closingKm.toFixed(1)}
                          </span>
                          <span>
                            <span className="font-medium">Mileage:</span>{" "}
                            {entry.mileage.toFixed(2)} km/l
                          </span>
                        </div>
                        {(entry.openingKmPhotoName ||
                          entry.closingKmPhotoName) && (
                          <div className="mt-1 text-[10px] text-slate-500">
                            Photos:&nbsp;
                            {entry.openingKmPhotoName && (
                              <span className="mr-2">
                                O: {entry.openingKmPhotoName}
                              </span>
                            )}
                            {entry.closingKmPhotoName && (
                              <span>C: {entry.closingKmPhotoName}</span>
                            )}
                          </div>
                        )}
                      </div>
                    ))}
                  </div>
                </>
              )}
            </div>
          </div>
        </section>

        {/* Today's entries */}
        <section className="rounded-2xl border border-slate-200 bg-white p-4 md:p-5 shadow-sm">
          <div className="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
            <div>
              <h2 className="text-sm md:text-base font-semibold text-slate-900">
                Today&apos;s Fuel Entries
              </h2>
              <p className="mt-1 text-[11px] md:text-xs text-slate-500">
                Entries on <span className="font-medium">{todayStr}</span> for{" "}
                <span className="font-medium">{selectedProject}</span>.
              </p>
            </div>
            <span className="rounded-full bg-slate-100 px-3 py-1 text-[11px] font-medium text-slate-600">
              {todayEntries.length} entr
              {todayEntries.length === 1 ? "y" : "ies"}
            </span>
          </div>

          {todayEntries.length === 0 ? (
            <p className="mt-3 text-[11px] text-slate-500">
              No fuel entries recorded for today.
            </p>
          ) : (
            <div className="mt-3 grid gap-2 md:grid-cols-3">
              {todayEntries.map((entry) => (
                <div
                  key={entry.id}
                  className="rounded-xl border border-slate-100 bg-slate-50 px-3 py-2 text-[11px]"
                >
                  <div className="flex justify-between gap-2">
                    <div className="font-semibold text-slate-800">
                      {entry.vehicleName}
                    </div>
                    <span className="rounded-full bg-white px-2 py-0.5 text-[10px] text-slate-600">
                      {entry.fuelType}
                    </span>
                  </div>
                  <div className="mt-1 grid grid-cols-2 gap-x-4 gap-y-1 text-slate-600">
                    <span>
                      <span className="font-medium">Litres:</span>{" "}
                      {entry.litres.toFixed(2)}
                    </span>
                    <span>
                      <span className="font-medium">Mileage:</span>{" "}
                      {entry.mileage.toFixed(2)} km/l
                    </span>
                    <span>
                      <span className="font-medium">Opening:</span>{" "}
                      {entry.openingKm.toFixed(1)}
                    </span>
                    <span>
                      <span className="font-medium">Closing:</span>{" "}
                      {entry.closingKm.toFixed(1)}
                    </span>
                    <span>
                      <span className="font-medium">Distance:</span>{" "}
                      {entry.distance.toFixed(1)} km
                    </span>
                  </div>
                </div>
              ))}
            </div>
          )}
        </section>
      </div>
    </div>
  );
};

export default App;
